# Environment variables for production deployment
# Copy this file to .env.local and fill in your values

# Next.js configuration
NEXTAUTH_URL=https://your-domain.vercel.app
NEXTAUTH_SECRET=your-secret-key-here

# OpenRouter API Keys (multiple keys for load balancing)
OPENROUTER_API_KEY_1=sk-or-v1-your-first-key-here
OPENROUTER_API_KEY_2=sk-or-v1-your-second-key-here
OPENROUTER_API_KEY_3=sk-or-v1-your-third-key-here
OPENROUTER_API_KEY_4=sk-or-v1-your-fourth-key-here
OPENROUTER_API_KEY_5=sk-or-v1-your-fifth-key-here
OPENROUTER_API_KEY_6=sk-or-v1-your-sixth-key-here
OPENROUTER_API_KEY_7=sk-or-v1-your-seventh-key-here
OPENROUTER_API_KEY_8=sk-or-v1-your-eighth-key-here

# Groq API Key (fastest inference)
GROQ_API_KEY=gsk_your-groq-api-key-here

# AI Model Configuration (most powerful free models)
AI_PROVIDER=groq
AI_MODEL=llama-3.3-70b-versatile
FALLBACK_PROVIDER=openrouter
FALLBACK_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Optional: Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Optional: Sentry error tracking
SENTRY_DSN=your-sentry-dsn

# Admin password (if you want to use environment variable instead of hardcoded)
ADMIN_PASSWORD=your-admin-password

# Optional: Builder.io API key (if using Builder.io CMS)
BUILDER_API_KEY=your-builder-api-key
